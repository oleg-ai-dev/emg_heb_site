{
  "build": {
    "env": {
      "NODE_VERSION": "20.x"
    }
  },
  "routes": [
    {
      "src": "/articles/images/(.*\\.jpg)",
      "dest": "/public/articles/images/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/.*",
      "dest": "index.html"
    }
  ]
}
